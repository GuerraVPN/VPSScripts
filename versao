##CONFIG VERSAO
SIM () {
   apt-get update -y; apt-get upgrade -y; wget apt-get update -y; apt-get upgrade -y; wget https://raw.githubusercontent.com/GuerraVPN/VPSScripts/main/VPSScript.sh
   clear
   echo -e "SCRIPT INSTALADO"
   sleep 2
   echo -e "INICIANDO SCRIPT"
   sleep 2
   bash VPSScript.sh
   clear
}
NAO () {
   clear
}
clear
echo -e "VERSAO ATUAL => V13"
echo -e "ADICIONADO:
=> Novo menu de Atualizações"
echo -e ""
echo -e ""
echo -e ""
echo -ne "DESEJA ATUALIZAR (S|N)? :"; read x

case "$x" in
    S)
   SIM
   exit;
   ;;
    N)
   NAO
   exit;
   ;;
esac
